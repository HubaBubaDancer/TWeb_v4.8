@model TWeb48.Api.Reference.Dtos.UpdateRequest
@using (Html.BeginForm("UpdateProfile", "Account", FormMethod.Post))
{
    <head>
        <title>Update Profile</title>
        <link rel="stylesheet" href="~/wwwroot/login.css"/>
    </head>

    <div class="main" align="center">
        <p class="sign">Update Profile</p>
        <div class="form1">
            @Html.TextBoxFor(m => m.Name, new { placeholder = "Name", @class = "un" })
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "un" })
            @Html.TextBoxFor(m => m.NewPassword, new { placeholder = "New Password", @class = "pass" })
            @Html.TextBoxFor(m => m.LicenceNumber, new { placeholder = "Licence Number", @class = "un" })
            @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Phone Number", @class = "un" })
            @Html.TextBoxFor(m => m.OldPassword, new { placeholder = "Old Password", @class = "pass" })
        </div>
        <button type="submit" class="button-64">Update</button>
    </div>
}