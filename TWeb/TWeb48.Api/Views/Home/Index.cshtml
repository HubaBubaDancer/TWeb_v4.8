@{
ViewData["Title"] = "Home Page";
var userName = User.Identity.Name;
}

<head>
    <title>aaa</title>
    
    <link rel="stylesheet" href="~/wwwroot/index.css" /> <!-- Подключаем новый CSS файл -->
</head>
<body>
<div class="main-container">
    <div class="content">
        @if (!string.IsNullOrEmpty(userName))
        {
        <h1>Hello, @userName</h1>
        }
        else
        {
        <h1>Welcome</h1>
        }
        <p>Explore the freedom of the open road with our premium car rental services. Whether you're planning a short trip or a long journey, we offer a diverse fleet of well-maintained vehicles, tailored to suit your needs. Enjoy hassle-free bookings, competitive rates, and exceptional customer service. Drive your adventure today!</p>
        <a class="button-64" href="@Url.Action("Cars", "Home")" role="button">Pick your car</a>
    </div>
    <div class="image-container">
        <img src="~/wwwroot/images/civic.png" alt="Car Image" class="car-image"/>
    </div>
</div>
</body>
